<h2>提案詳細</h2>
<table class="table table-hover">
  <thead>
    <tr class="success">
      <th>金融機関名</th>
      <th>提案金額</th>
      <th>提案タイプ</th>
      <th>提案金利</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @proposal.lender.name %></td>
      <td><%= @proposal.amount %></td>
      <td><%= @proposal.rate_type %></td>
      <td><%= @proposal.rate %></td>
    </tr>
  </tbody>
</table>
<div>
  <%= simple_format(@proposal.description) %>
</div>

<% unless @proposal.choiced == true %>
  <div>
    <%= button_to "この提案を受ける", proposals_choice_proposal_path(id: @proposal), data: {:confirm => "この提案を受けると他の提案を受けることができません。よろしいですか？"}, class:"btn btn-primary btn-block" %>
  </div>
<% else %>
  <%= button_to "既に提案を受けています", proposals_choice_proposal_path(id: @proposal), :disabled => true, data: {:confirm => "この提案を受けると他の提案を受けることができません。よろしいですか？"}, class:"btn btn-primary btn-block" %>
<% end %>