
<h2>提案詳細</h2>
<table class="table table-hover">
  <thead>
    <tr class="success">
      <th>金融機関名</th>
      <th>提案金額</th>
      <th>提案タイプ</th>
      <th>提案金利</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @proposal.lender.name %></td>
      <td><%= @proposal.amount %></td>
      <td><%= @proposal.rate_type %></td>
      <td><%= @proposal.rate %></td>
    </tr>
  </tbody>
</table>
<div>
  <%= simple_format(@proposal.description) %>
</div>

<% if @proposal.choiced == true %>
  <div>
    <%= link_to "契約手続きへ", dashboard_path, class: "btn btn-success" %>
  </div>
<% end %>