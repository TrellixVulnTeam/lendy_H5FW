<h2>マイページ</h2>
<div class="row">
  <div class=" col-sm-3">
    <div class="panel panel-default">
      <div class="panel-heading">基本情報</div>
      <div class="panel-body">
        <%= link_to "基本情報の編集", edit_user_registration_path, class:"btn btn-success btn-block" %>
      </div>
    </div>
  </div>
  <div class=" col-sm-3">
    <div class="panel panel-default">
      <div class="panel-heading">ユーザー情報</div>
      <div class="panel-body">
        <% if current_user.user_profile.present? %>
          <%= link_to "ユーザー情報の編集", edit_user_profile_path(current_user.user_profile), class:"btn btn-success btn-block" %>
        <% else %>
          <%= link_to "ユーザー情報の追加", new_user_profile_path, class:"btn btn-success btn-block" %>
        <% end %>
      </div>
    </div>
  </div>
  <div class=" col-sm-3">
    <div class="panel panel-default">
      <div class="panel-heading">学校情報</div>
      <div class="panel-body">
        <% if current_user.school_profile.present? %>
          <%= link_to "学校情報の編集", edit_borrow_condition_path(current_user.school_profile), class:"btn btn-success btn-block" %>
        <% else %>
          <%= link_to "学校情報の編集", new_school_profile_path, class:"btn btn-success btn-block" %>
        <% end %>
      </div>
    </div>
  </div>
  <div class=" col-sm-3">
    <div class="panel panel-default">
      <div class="panel-heading">職務経歴</div>
      <div class="panel-body">
        <% if current_user.business_profile.present? %>
          <%= link_to "職務経歴の編集", edit_business_profile_path(current_user.business_profile), class:"btn btn-success btn-block" %>
        <% else %>
          <%= link_to "職務経歴の追加", new_business_profile_path, class:"btn btn-success btn-block" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<% if current_user.borrow_condition.present? %>
  <div>
    <%= link_to "提案一覧を見る", proposals_path, class:"btn btn-success btn-block" %>
  </div>
<% else %>
  <div>
    <%= link_to "借入申込を行う", new_borrow_condition_path, class:"btn btn-success btn-block" %>
  </div>
<% end %>