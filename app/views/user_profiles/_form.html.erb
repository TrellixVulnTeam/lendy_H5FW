<h2>会員情報の追加</h2>
<%= form_for(@user_profile, html: { class: "form-horizontal" }) do |f| %>

  <% if @user_profile.errors.any? %>
    <div class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= @user_profile.errors.count %>個のエラーがあります</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @user_profile.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

<fieldset>
  <legend>会員情報追加</legend>
  <div class="form-group">
    <label class="col-lg-2 control-label">生年月日</label>
    <div class="col-lg-10">
      <%= f.date_select :birthday, { start_year: 1985, end_year: 2000 }, { class: "form-control" }  %>
    </div>
  </div>
  <div class="form-group">
    <label class="col-lg-2 control-label">学校区分</label>
    <div class="col-lg-10">
      <%= f.select(:school_type, [["大学卒", 1], ["大学院卒（修士）", 2], ["大学院卒（博士）", 3]], { include_blank: true } ,{ class: "form-control" } ) %>
    </div>
  </div>
  <div class="form-group">
    <label class="col-lg-2 control-label">在籍状況</label>
    <div class="col-lg-10">
      <%= f.select(:school_status, [["卒業済み", 1], ["在学中", 2]], { include_blank: true } ,{ class: "form-control" } ) %>
    </div>
  </div>
  <div class="form-group">
    <label class="col-lg-2 control-label">学校名</label>
    <div class="col-lg-10">
      <%= f.text_field :school_name, class: "form-control" %>
    </div>
  </div>
  
  <div class="form-group">
    <label class="col-lg-2 control-label">学部学科</label>
    <div class="col-lg-10">
      <%= f.text_field :school_department, class: "form-control" %>
    </div>
  </div>
  
  <div class="form-group">
    <div class="col-lg-10 col-lg-offset-2">
      <%= f.submit class: "btn btn-success" %>
    </div>
  </div>
</fieldset>
<% end %>