<h2>会員情報の追加</h2>
<%= form_for(@user_profile, html: { class: "form-horizontal" }) do |f| %>

  <% if @user_profile.errors.any? %>
    <div class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= @user_profile.errors.count %>個のエラーがあります</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @user_profile.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

<fieldset>
  <legend>会員情報追加</legend>
  <div class="form-group">
    <label class="col-lg-2 control-label">氏名</label>
    <div class="col-lg-5">
      <%= f.text_field :name, placeholder: "山田", class: "form-control" %>
    </div>
    <div class="col-lg-5">
      <%= f.text_field :name2, placeholder: "太郎", class: "form-control" %>
    </div>
  </div>
  
  <div class="form-group">
    <label class="col-lg-2 control-label">ヨミ</label>
    <div class="col-lg-5">
      <%= f.text_field :yomi, placeholder: "ヤマダ", class: "form-control" %>
    </div>
    <div class="col-lg-5">
      <%= f.text_field :yomi2, placeholder: "タロウ", class: "form-control" %>
    </div>
  </div>
  
  <div class="form-group">
    <label class="col-lg-2 control-label">電話番号</label>
    <div class="col-lg-10">
      <%= f.text_field :tel, placeholder: "09012345678", class: "form-control" %>
      <span class="help-block">ハイフンなしで入力してください。</span>
    </div>
  </div>
  
  <div class="form-group">
    <label class="col-lg-2 control-label">郵便番号</label>
    <div class="col-lg-10">
      <%= f.text_field :zipcode, placeholder: "1500011", class: "form-control" %>
      <span class="help-block">ハイフンなしで入力してください。</span>
    </div>
  </div>
  
  <div class="form-group">
    <label class="col-lg-2 control-label">都道府県</label>
    <div class="col-lg-10">
      <%= f.select(:prefecture, [ '北海道', '青森県', '岩手県', '宮城県', '秋田県', '山形県', '福島県', '茨城県', '栃木県', '群馬県', '埼玉県', '千葉県', '東京都', '神奈川県', '新潟県', '富山県', '石川県', '福井県', '山梨県', '長野県', '岐阜県', '静岡県', '愛知県', '三重県', '滋賀県', '京都府', '大阪府', '兵庫県', '奈良県', '和歌山県', '鳥取県', '島根県', '岡山県', '広島県', '山口県', '徳島県', '香川県', '愛媛県', '高知県', '福岡県', '佐賀県', '長崎県', '長崎県', '熊本県', '大分県', '宮崎県', '鹿児島県', '沖縄県'] , { include_blank: true }, { :class => "form-control" }) %>
    </div>
  </div>
  
  <div class="form-group">
    <label class="col-lg-2 control-label">市区町村番地</label>
    <div class="col-lg-10">
      <%= f.text_field :city, placeholder: "渋谷区桜ヶ丘8-17", class: "form-control" %>
      <span class="help-block">番地まで入力してください。</span>
    </div>
  </div>
  
  <div class="form-group">
    <label class="col-lg-2 control-label">アパート・マンション名</label>
    <div class="col-lg-10">
      <%= f.text_field :apartment, placeholder: "シャレー渋谷B棟614", class: "form-control" %>
      <span class="help-block">マンション・アパート名を入力してください。ない場合は空欄にしてください。</span>
    </div>
  </div>
  
  <div class="form-group">
    <label class="col-lg-2 control-label">生年月日</label>
    <div class="col-lg-10">
      <%= f.date_select :birthday, { start_year: 1985, end_year: 2000 }, { class: "form-control" }  %>
    </div>
  </div>

  
  <div class="form-group">
    <div class="col-lg-10 col-lg-offset-2">
      <%= f.submit class: "btn btn-success" %>
    </div>
  </div>
</fieldset>
<% end %>