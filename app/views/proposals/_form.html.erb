<h2>提案内容</h2>
<%= form_for(@proposal, html: { class: "form-horizontal" }) do |f| %>
  <%= f.hidden_field :borrow_condition_id, :value => params[:borrow_condition_id] %>

  <% if @proposal.errors.any? %>
    <div class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= @proposal.errors.count %>個のエラーがあります</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @proposal.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

<fieldset>
  <legend>提案内容</legend>
  <div class="form-group">
    <label class="col-lg-2 control-label">提案金額</label>
    <div class="col-lg-10">
      <%= f.number_field :amount, class: "form-control" %>
      
    </div>
  </div>
  <div class="form-group">
    <label class="col-lg-2 control-label">提案金利タイプ</label>
    <div class="col-lg-10">
      <%= f.select(:rate_type, [["変動金利", 1], ["固定金利", 2]], { include_blank: true } ,{ class: "form-control" } ) %>
    </div>
  </div>
  <div class="form-group">
    <label class="col-lg-2 control-label">提案金利</label>
    <div class="col-lg-10">
      <%= f.text_field :rate, class: "form-control" %>
      
    </div>
  </div>
  <div class="form-group">
    <label class="col-lg-2 control-label">提案注意事項</label>
    <div class="col-lg-10">
      <%= f.text_area :description, class: "form-control" %>
      
    </div>
  </div>
  
  <div class="form-group">
    <div class="col-lg-10 col-lg-offset-2">
      <%= f.submit "提案する", class: "btn btn-success" %>
    </div>
  </div>
</fieldset>
<% end %>